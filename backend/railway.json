{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo Installing backend deps... && npm install"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30000,
    "restartPolicyType": "ON_FAILURE"
  },
  "nixpacks": {
    "nodejs": {
      "version": "18"
    }
  }
}
