# Configuração do Banco de Dados - Railway
DATABASE_URL=mysql://root:${MYSQL_ROOT_PASSWORD}@mysql:3306/sistema_inscricoes
MYSQLHOST=mysql
MYSQLUSER=root
MYSQLPASSWORD=${MYSQL_ROOT_PASSWORD}
MYSQLDATABASE=sistema_inscricoes
MYSQLPORT=3306

# Configuração JWT
JWT_SECRET=sua_chave_secreta_aqui_muito_forte_e_unic
JWT_EXPIRES_IN=7d

# Porta do servidor (Railway vai definir automaticamente)
PORT=8080

# Configurações de email (se usar)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app

# Outras configurações
NODE_ENV=production
