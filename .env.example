# Configuração do Banco de Dados
DATABASE_URL=mysql://usuario:senha@host:3306/nome_banco
# Ou use variáveis separadas:
# DB_HOST=localhost
# DB_USER=usuario
# DB_PASSWORD=senha
# DB_NAME=nome_banco
# DB_PORT=3306

# Configuração JWT
JWT_SECRET=sua_chave_secreta_aqui
JWT_EXPIRES_IN=7d

# Porta do servidor (Railway vai definir automaticamente)
PORT=8080

# Configurações de email (se usar)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app

# Outras configurações
NODE_ENV=production
